<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menu_navegacion"
    android:background="@drawable/degradado">

    <androidx.cardview.widget.CardView
        android:id="@+id/General2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:cardBackgroundColor="@color/botones1"
        app:cardElevation="4dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/logoMenu"
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:layout_marginStart="30dp"
                android:src="@drawable/logo_correcte_no_fons"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <ImageView
                android:id="@+id/fotoPerfil"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="30dp"
                android:src="@drawable/usuario"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardContenedorLista"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        app:cardCornerRadius="30dp"
        app:layout_constraintTop_toBottomOf="@id/General2"
        app:layout_constraintBottom_toTopOf="@id/BottomBar" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/degradado">

            <androidx.cardview.widget.CardView
                android:id="@+id/header_lista"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/azul"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="8dp">

                    <TextView
                        android:id="@+id/activitats_recents"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/activitats_recents"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="12dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="20sp" />

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none"
                        android:paddingStart="20dp"
                        android:layout_marginTop="8dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/btnFiltroDistancia"
                                android:layout_width="wrap_content"
                                android:layout_height="36dp"
                                android:text="Distancia"
                                android:textSize="11sp"
                                android:backgroundTint="@color/botones1" />

                            <Button
                                android:id="@+id/btnFiltroDuracion"
                                android:layout_width="wrap_content"
                                android:layout_height="36dp"
                                android:layout_marginStart="8dp"
                                android:text="DuraciÃ³n"
                                android:textSize="11sp"
                                android:backgroundTint="@color/botones1" />

                            <Button
                                android:id="@+id/btnFiltroLimpiar"
                                android:layout_width="wrap_content"
                                android:layout_height="36dp"
                                android:layout_marginStart="8dp"
                                android:text="Todos"
                                android:textSize="11sp"
                                android:backgroundTint="@color/black" />

                        </LinearLayout>
                    </HorizontalScrollView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewActividades"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="10dp"
                android:clipToPadding="false"
                tools:listitem="@layout/item_activitat"
                android:background="@drawable/degradadorecycle" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/BottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:menu="@menu/menu_inferior"
        android:background="@color/white" />

</androidx.constraintlayout.widget.ConstraintLayout>